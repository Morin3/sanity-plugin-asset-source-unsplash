{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./lib",

    "target": "esnext",
    "jsx": "preserve",
    "module": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    "resolveJsonModule": true
  }
}
